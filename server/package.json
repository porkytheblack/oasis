{
  "name": "oasis-tauri-update-server",
  "version": "1.0.0",
  "description": "Tauri Update Server for managing application updates",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "db:generate": "drizzle-kit generate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "create-admin-key": "tsx scripts/create-admin-key.ts",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f postgres"
  },
  "keywords": [
    "tauri",
    "update-server",
    "hono"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.980.0",
    "@aws-sdk/s3-request-presigner": "^3.980.0",
    "@hono/node-server": "^1.13.7",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.38.3",
    "hono": "^4.6.16",
    "pg": "^8.11.3",
    "ulid": "^2.3.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/node": "^22.10.6",
    "@types/pg": "^8.11.0",
    "@vitest/coverage-v8": "^4.0.18",
    "drizzle-kit": "^0.30.6",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "vitest": "^4.0.18"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
